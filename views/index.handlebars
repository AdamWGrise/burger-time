<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Burger Time!</h1>
        <p class="lead">Keep track of your veggie burger consumption here. There are so many varieties out there, you
            will want to
            remember what you've had and what you haven't!</h4>
    </div>
    <hr class="faded">
    <div class="row">
        <div class="col-lg-12">
            <h2>Add a Burger</h2>
            <div class="row">
                <div class="col-lg-4">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="burger-name">Burger name:</label>
                            <input type="text" id="burger-name" name="burger-name">
                        </div>
                </div>
                <div class="col-lg-8">
                    <button type="submit">Add Burger</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <hr class="faded">
    <div class="row">
        <div class="col-lg-6">
            <h2>Burgers to eat</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg-6">
            <h2>Burgers eaten</h2>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>



</div>